{% extends 'back-office/base.html.twig' %}

{% block body %}`
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1>Image {{ image.name }}</h1>
    </div>
    <div class="panel-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ image.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ image.name }}</td>
                </tr>
                <tr>
                    <th>Path</th>
                    <td>{{ image.path }}</td>
                </tr>
            </tbody>
        </table>

        <img src="{{ asset(image.path) }}" alt="">

        <ul>
            <li>
                <a href="{{ path('images_index') }}" class="btn btn-lg btn-primary">Back to the list</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-lg btn-danger">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
