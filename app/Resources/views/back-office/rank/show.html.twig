{% extends 'back-office/base.html.twig' %}

{% block body %}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1>Rank</h1>
    </div>
    <div class="panel-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ rank.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ rank.name }}</td>
                </tr>
                <tr>
                    <th>Value</th>
                    <td>{{ rank.value }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('back-office_rank_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('back-office_rank_edit', { 'id': rank.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}

