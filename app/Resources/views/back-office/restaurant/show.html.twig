{% extends 'back-office/base.html.twig' %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1>Restaurant informations</h1>
        </div>
        <div class="panel-body">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ restaurant.name }}</td>
                    </tr>
                    <tr>
                        <th>Birth date</th>
                        <td>{{ restaurant.birthDate | date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ restaurant.address }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ restaurant.phone }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ restaurant.email}}</td>
                    </tr>

                </tbody>
            </table>
         </div>
    </div>
    <table class="table">
        <tbody>

        </tbody>
    </table>
    <ul>
        {% for slot in timeslots %}
            <li>{{ slot.startTime[0] }}h{{ slot.startTime[1] }} {{ slot.endTime[0] }}h{{ slot.endTime[1] }}</li>
        {% endfor %}
    </ul>

            <ul class="list-group">
                <li class="list-group-item">
                    <a href="{{ path('_restaurant_index') }}"><button type="button" class="btn btn-lg btn-primary">Back to the list</button></a>
                </li>
                <li class="list-group-item">
                    <a href="{{ path('_restaurant_edit', { 'id': restaurant.id }) }}"><button type="button" class="btn btn-lg btn-warning">Edit</button></a>
                </li>
                <li class="list-group-item">
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-lg btn-danger" />
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}



