{% extends 'default/base.html.twig' %}

{% block body %}
    <h1>Gallery</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gallery.name }}</td>
            </tr>

            {% for image in gallery.images %}
            <tr>
                <th>{{ image.name }}</th>
                <td><img src="{{ asset(image.path) | imagine_filter('my_thumb') }}" alt=""></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('galleries_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('galleries_edit', { 'id': gallery.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
